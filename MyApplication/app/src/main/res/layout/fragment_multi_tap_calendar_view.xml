<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragment_multi_tap_calendar_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".views.view.MultiTapCalendarDialog">

    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="59dp">

        <com.aireuropa.mobile.cdig.views.view.widget.CustomButton
            android:id="@+id/cps_cancel_button"
            style="@style/AppThemeTextAppearanceExtraSmall.Regular.Button.Negative5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_weight="2"
            android:background="?drawable_selector_disabled_button3"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:text="@string/change_published_schedule_cancel_btn_label" />

        <com.aireuropa.mobile.cdig.views.view.widget.CustomButton
            android:id="@+id/cps_accept_button"
            style="@style/AppThemeTextAppearanceExtraSmall.Regular.Button.Negative5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_weight="2"
            android:background="?drawable_selector_disabled_button3"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:text="@string/change_published_schedule_accept_btn_label" />

    </LinearLayout>

    <com.savvi.rangedatepicker.CalendarPickerView
        android:id="@+id/calendar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="2dp"
        android:clipToPadding="true"
        android:foregroundGravity="center_vertical|center"
        android:padding="5dp"
        android:scrollbarStyle="outsideOverlay"
        app:tsquare_dividerColor="@color/transparent"
        app:tsquare_headerTextColor="@color/gray_dark"
        app:tsquare_orientation_horizontal="true"
        tools:layout_editor_absoluteY="-41dp"

        />

</RelativeLayout>